








<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.quraan.Sign_Up">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Enter Your Username"
        android:id="@+id/username_edit_text_sign_up"
        android:background="#ffe6e6e6"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"

        android:id="@+id/email_edit_text_sign_up"
        android:background="#ffe6e6e6"
        android:layout_below="@+id/username_edit_text_sign_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <EditText
        android:layout_width="fill_parent"

        android:hint="Enter Your Password"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_edit_text_sign_up"
        android:background="#ffe6e6e6"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Confirm your pasword"

        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_again_edit_text_sign_up"
        android:background="#ffe6e6e6"
        android:layout_below="@+id/password_edit_text_sign_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="sign up"
        android:id="@+id/action_button_sign_up"
        android:layout_below="@+id/password_again_edit_text_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />


</RelativeLayout>
