<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.quraan.Login">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Enter your user name"
        android:ems="10"
        android:id="@+id/username_edit_text_login"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/password_edit_text_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffe6e6e6" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter Your Password"

        android:id="@+id/password_edit_text_login"
        android:layout_marginBottom="106dp"
        android:layout_above="@+id/action_button_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffe6e6e6" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Login"
        android:id="@+id/action_button_login"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/edittext_action_signup"
        android:layout_alignLeft="@+id/edittext_action_signup"
        android:layout_alignStart="@+id/edittext_action_signup" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Sign up"
        android:id="@+id/edittext_action_signup"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="Sign_Up"/>

</RelativeLayout>
